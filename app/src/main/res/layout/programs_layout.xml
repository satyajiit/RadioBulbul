<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/pro"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Got any Queries??"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_below="@id/txt1"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/cav"
            android:text="Address: Ghousia Nagar,Near RMC Market, \nChandan Bazar, Bhadrak, Odisha 756100"

            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/pro"
        android:layout_below="@id/card_view"
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:text="( Click to open on Maps )"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/pro"
        android:layout_below="@id/txt5"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Want to call us?"
        />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_below="@id/txt2"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="078949 12912"
            android:padding="10dp"
            android:textColor="#000"
            android:fontFamily="@font/cav"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="23sp"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/pro"
        android:layout_below="@id/card_view2"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="You can find us on :"
        />
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view3"
        android:layout_below="@id/txt4"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fb_ic"
                />

            <ImageView
                android:id="@+id/yt"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:src="@drawable/yt_ic"
                />

            <ImageView
                android:id="@+id/insta"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:src="@drawable/insta_ic"
                />

            <ImageView
                android:id="@+id/twit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/twit_ic"
                />

            <ImageView
                android:id="@+id/whats"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/wa_ic"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>